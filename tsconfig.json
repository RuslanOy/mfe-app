{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "process": ["node_modules/process/browser"],
      "header/Header": ["./src/@types/mfe.d.ts"],
      "footer/Footer": ["./src/@types/mfe.d.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src"]
}
